@model SimpleBlog2.Areas.Admin.ViewModels.UsersResetPassword
<h1>Reset Password for User : @Model.Username</h1>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(p => p.Password)
        @Html.PasswordFor(p => p.Password, new { @class = "form-control" })
    </div>

    <input type="submit" value="Reset Password" class="btn btn-primary" />
    <a href="@Url.Action("index")">or cancel</a>
}