@model SimpleBlog2.Areas.Admin.ViewModels.UsersEdit
<h1>Edit for : @Model.Username</h1>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(p => p.Username)
        @Html.TextBoxFor(p => p.Username, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Email)
        @Html.TextBoxFor(p => p.Email, new { @class = "form-control", type = "email" })
    </div>

    
    <input type="submit" value="Update User" class="btn btn-primary" />
    <a href="@Url.Action("index")">or cancel</a>
}